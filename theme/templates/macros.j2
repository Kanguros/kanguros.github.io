{% macro article_header(article) %}
<header class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
                <div class="article-heading">
                    <a href="{{ SITEURL }}/{{ article.url }}" rel="bookmark" title="{{ article.title|striptags }}">
                        <h1>
                            {{ article.title|striptags }}
                        </h1>
                    </a>
                    {% if article.headline %}
                    <h3 class="subheading">{{ article.headline }}</h3>
                    {% endif %}
                    <p class="meta-element">
                        <i class="bi bi-calendar"></i> {{ article.locale_date }}
                        <i class="bi bi-dot"></i>
                        <i class="bi bi-clock-history"></i> {{ article.readtime_string }}
                    </p>
                    <p class="meta-element tags">
                        {% for t in article.tags %}
                        <a href="{{ SITEURL }}/tags/{{ t }}" rel="bookmark" title="{{ t }}">
                            #{{ t }}
                        </a>
                        {% endfor %}
                    </p>
                </div>
            </div>
        </div>
    </div>
</header>
{% endmacro %}


{% macro tags_list(tags) %}

<div class="tags meta-element">
    {% for t in tags %}
    <a href="{{ SITEURL }}/tags/{{ t }}" rel="bookmark" title="{{ t }}">
        #{{ t }}
    </a>
    {% endfor %}
</div>

{% endmacro %}

{% macro page_header(head_text, url, meta_text='') %}

<header class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
                <div class="heading d-flex flex-wrap align-items-baseline justify-content-between">
                    <a href="{{ SITEURL }}/{{ url }}" rel="bookmark" title="{{ head_text }}" class="me-5">
                        <h1 class="my-6">
                            {{ head_text }}
                        </h1>
                    </a>
                    {% if meta_text %}
                    <p class="heading-meta">
                        {{ meta_text }}
                    </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <hr class="navigation-hr">

</header>
{% endmacro %}
