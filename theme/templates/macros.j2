{% macro main_post(article) %}

<div class="post-preview">
    <h3 class="post-title">
        <a href="{{ SITEURL }}/{{ article.url }}" rel="bookmark" title="{{ article.title|striptags }}">
            {{ article.title }}
        </a>
    </h3>
    <p>
        {% if article.has_summary %}
        {{ article.summary }}
        {% elif article.summary %}
        {{ article.summary|striptags|truncate(200) }}
        {% endif %}
    </p>
    <div class="post-meta">
        <div>
            <span>{{ article.locale_date }}</span>{{ tags_list(article) }}
        </div>
        <div>
            <a class="read-more" href="{{ SITEURL }}/{{ article.url }}" title="Read more about {{ article.title }}" aria-label="Read more about {{ article.title }}">Read more â†’</a>
        </div>
    </div>
</div>

{% endmacro %}


{% macro private_post(article) %}

<div class="post-preview">
    <div class="d-flex justify-content-between align-self-center align-items-center margin-y">
        <h3 class="post-title" style="font-size: 1.4rem;">
            <a href="{{ SITEURL }}/{{ article.url }}" rel="bookmark" title="{{ article.title|striptags }}">
                {{ article.title }}
            </a>
        </h3>
    </div>
    <hr class="post-line">
</div>

{% endmacro %}


{% macro tags_list(article) %}
<span class="tags">
{% for t in article.tags %}
<a href="{{ SITEURL }}/tag/{{ t }}/index.html" rel="bookmark" title="Posts with #{{ t }} tag"
    aria-label="Posts with #{{ t }} tag">#{{ t }}</a>
{% endfor %}
</span>
{% endmacro %}
